<h1>Sales#new</h1>
<p>Find me in app/views/sales/new.html.erb</p>

<h1>Formulario de ingreso de ventas</h1>
<%= form_with model: @sale, url: sales_path, local: true do |f| %>
<%= label_tag 'Detalle' %>
<%= f.text_area :detail %>
<%= label_tag 'Categoria' %>
<%= f.text_field :category %>
<%= label_tag 'Valor' %>
<%= f.text_field :value %>
<%= label_tag 'Descuento' %>
<%= f.text_field :discount %>
<%= label_tag 'Exento de iva' %>
<%= f.check_box :tax %>
<%= f.submit "Enviar" %>
<% end %>
